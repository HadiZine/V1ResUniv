<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.resuniv">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ResUniv">
        <activity android:name=".ActivityAccueil"></activity>
        <activity android:name=".ActivityReclamationsEtudiant" />
        <activity android:name=".ActivityConsultationMenu" />
        <activity android:name=".ActivityQR" />
        <activity android:name=".ActivitySuiviReservation" />
        <activity android:name=".ActivityConsultationReclamation" />
        <activity android:name=".ActivityRemplisaageMenu" />
        <activity android:name=".ActivityProfilStaff" />
        <activity android:name=".PaiementActivity" />
        <activity
            android:name=".ActivityMenu"
            android:label="ActivityMenu"
            android:theme="@style/Theme.ResUniv.NoActionBar" />
        <activity android:name=".ActivityMethodePaiement" />
        <activity android:name=".ActivityPaiementPersonnalise" />
        <activity android:name=".ActivityPaiementComplet" />
        <activity android:name=".ActivityResetPasseword" />
        <activity android:name=".ActivityReservationComplete" />
        <activity android:name=".ActivityReservationPersonnalise" />
        <activity android:name=".ChoixTypeReservation" />
        <activity android:name=".activity_creer_compte_staff" />
        <activity android:name=".activity_creer_compte" />
        <activity android:name=".Activity_login_etudiant" />
        <activity android:name=".Activity_login_staff" />
        <activity android:name=".Activity2choixProfil" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CaptureAct"
            android:screenOrientation="fullSensor"
            android:stateNotNeeded="true"
            android:windowSoftInputMode="stateAlwaysHidden" />
    </application>

</manifest>